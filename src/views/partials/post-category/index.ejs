<h1 class="text-4xl font-medium">Post Categories</h1>

<a class="text-primary" href="/post-categories/create">Create New Post Category</a>

<div class="flex flex-col gap-4 py-4">

  <% postCategories.forEach(postCategory=> { %>
    <div class="flex justify-between border rounded p-2">
      <div>
        <%= postCategory.name %>
      </div>
      <div class="flex gap-2">
        <a class="text-primary" href="/post-categories/edit/<%= postCategory._id %>">Edit</a>
        <form class="text-red-600" action="/post-categories/delete/<%= postCategory._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
    <% }); %>
</div>
