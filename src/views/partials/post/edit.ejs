<form action="/posts/update/<%= post._id %>?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="flex flex-col">
    <label class="mb-1" for="title">Title:</label>
    <input class="border rounded mb-2 py-1 px-2" type="text" id="title" name="title" required value="<%=post.title %>">
  </div>

  <div class="flex flex-col">
    <label class="mb-1" for="author">Author:</label>
    <input class="border rounded mb-2 py-1 px-2" type="text" id="author" name="author" required
      value="<%=post.author %>">
  </div>

  <div class="flex flex-col">
    <label class="mb-1" for="content">Content:</label>
    <textarea class="border rounded mb-2 py-1 px-2" rows="4" id="content" name="content"
      required><%=post.content %></textarea>
  </div>

  <div class="flex flex-col">
    <label class="mb-1" for="category">Category:</label>
    <select class="border rounded mb-2 py-1 px-2" id="category" name="category" required>
      <option value="">Select category</option>
      <% postCategories.forEach(postCategory=> { %>
        <option value="<%= postCategory._id %>" <%=post.category.toString()===postCategory._id.toString()
          ? 'selected' : '' %>
          >
          <%= postCategory.name %>
        </option>
        <% }); %>
    </select>
  </div>

  <button type="submit">Update Post</button>
</form>
